<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping schema="infra">
	<class name="com.webnowbr.siscoat.infra.db.model.MenuItem"
		table="MenuItem">
		<id name="id" type="long">
			<column name="ID" />
			<generator class="increment" />
		</id>
		<property name="nome" type="java.lang.String">
			<column name="nome" />
		</property>
		<property name="acao" type="java.lang.String">
			<column name="acao" />
		</property>
		<property name="icone" type="java.lang.String">
			<column name="icone" />
		</property>

		<property name="permissao" type="java.lang.String">
			<column name="permissao" />
		</property>
		<property name="ordem" type="int">
			<column name="ordem" default="0" />
		</property>
		<property name="tipo" type="java.lang.String">
			<column name="tipo" />
		</property>

		<many-to-one name="itemPai"
			class="com.webnowbr.siscoat.infra.db.model.MenuItem">
			<column name="itemPai" />
		</many-to-one>

	</class>
</hibernate-mapping>